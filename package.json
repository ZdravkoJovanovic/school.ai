{
  "name": "school-ai",
  "version": "1.0.0",
  "description": "School AI Project",
  "main": "server.ts",
  "scripts": {
    "start": "ts-node server.ts",
    "dev": "concurrently \"nodemon --exec ts-node server.ts\" \"npm run build:css\"",
    "build": "tsc",
    "serve": "node dist/server.js",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/styles.css --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "concurrently": "^8.2.2"
  }
}
